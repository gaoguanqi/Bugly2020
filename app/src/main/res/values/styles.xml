<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="NoTitleBarTheme">
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="style_menu_active">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="style_menu_inactive">
        <item name="android:textSize">12sp</item>
    </style>
</resources>